<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context=".view.fragment.SplashFragment">
    <ImageView


        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_150dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-30dp"
        android:id="@+id/splash_image1"
        android:src="@drawable/ic_hng"

        />

    <ScrollView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/splash_image1"
        android:layout_above="@id/splash_image2"
        android:layout_marginBottom="@dimen/dim_20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fillViewport="true"
        >
        <RelativeLayout
            android:layout_margin="@dimen/dim_20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <ImageView
                android:layout_width="@dimen/dim_250dp"
                android:layout_height="@dimen/dim_250dp"
                android:id="@+id/splash_logo"
                android:layout_centerHorizontal="true"


                android:src="@drawable/ic_sofralogo_12x" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_50dp"
                android:id="@+id/splash_orderfood"
                android:layout_below="@id/splash_logo"
                android:layout_margin="@dimen/dim_20dp"
                android:text="@string/order_food"
                android:background="@drawable/button_order"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_50dp"
                android:id="@+id/splash_sellfood"
                android:layout_below="@id/splash_orderfood"
                android:layout_margin="@dimen/dim_20dp"
                android:text="@string/sell_food"
                android:background="@drawable/button_order"
                />


        </RelativeLayout>


    </ScrollView>
    <ImageView

android:layout_marginEnd="-50dp"
        android:layout_alignParentEnd="true"

        android:id="@+id/splash_image2"
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="@dimen/dim_200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-60dp"
        android:src="@drawable/ic_o"

        />

</RelativeLayout>