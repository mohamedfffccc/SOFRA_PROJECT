<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/newcategorydialog_tvcategorytext"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/album_dp_20"
        android:textSize="@dimen/album_sp_20"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_height="wrap_content"
        android:text="category image" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/newcategorydialog_ivcategoryimage"
        android:layout_below="@id/newcategorydialog_tvcategorytext"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/album_dp_20"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="@color/gray"
        android:layout_width="@dimen/album_dp_100"
        android:layout_height="@dimen/album_dp_100"
        app:srcCompat="@drawable/ic_broken_image_black_24dp" />
    <EditText
        android:id="@+id/newcategorydialog_edcategoryname"
        android:layout_below="@id/newcategorydialog_ivcategoryimage"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/dim_15sp"
        android:textColor="@color/black"
        android:background="@drawable/ed_forget"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/album_dp_20"
        android:layout_height="@dimen/album_dp_50"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:textColorHint="@color/gray"/>



    <Button
        android:id="@+id/newcategorydialog_btnadd"
        android:layout_below="@id/newcategorydialog_edcategoryname"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add" />




</RelativeLayout>