<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/dim_70dp"
    android:layout_marginTop="@dimen/dim_10dp"
    android:background="@drawable/categoryimageback">
    <ImageView
        android:layout_width="@dimen/album_dp_50"
        android:layout_height="@dimen/dim_60dp"
        android:src="@drawable/ic_notifications_active_black_24dp"
        android:id="@+id/notificationitem_ivimage"
        android:layout_alignParentStart="true"/>
    <TextView
        android:fontFamily="@font/font5"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationitem_tvtext"
        android:layout_toEndOf="@id/notificationitem_ivimage"
        android:text="هناك حقيقة مثبتة ان المحشي بيزود الوزن"
        android:layout_marginTop="@dimen/album_dp_20"
        android:layout_marginStart="@dimen/album_dp_10"
        android:textSize="@dimen/dim_15sp"
        android:textColor="@color/black"/>
    <TextView
        android:fontFamily="@font/font5"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="منذ 25 د"
        android:layout_alignParentEnd="true"
        android:id="@+id/notificationitem_tvtime"
        android:layout_centerInParent="true"
        android:textSize="@dimen/dim_10sp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/album_dp_10" />
    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_toStartOf="@id/notificationitem_tvtime"
        android:src="@drawable/ic_access_time_black_24dp"
        android:layout_margin="@dimen/album_dp_10"/>


</RelativeLayout>