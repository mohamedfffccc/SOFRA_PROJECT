<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/are_you_sure_you_want_to_logout"
        android:id="@+id/logout_tvsure"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/album_dp_20"
        android:textSize="@dimen/dim_25sp"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
android:layout_below="@id/logout_tvsure"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dim_100dp"
        android:src="@drawable/ic_check_circle_black_24dp"
        android:id="@+id/logout_ivyes"/>
    <ImageView
        android:src="@drawable/ic_cancel_blue_24dp"

        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        android:layout_below="@id/logout_tvsure"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dim_100dp"
        android:id="@+id/logout_ivno"/>


</RelativeLayout>